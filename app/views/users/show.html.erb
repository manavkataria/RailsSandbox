<p id="notice"><%= notice %></p>

<p>
  <b>Provider:</b>
  <%= @user.provider %>
</p>

<p>
  <b>Uid:</b>
  <%= @user.uid %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Gender:</b>
  <%= @user.gender %>
</p>

<p>
  <b>Image:</b>
  <% if @user.ProfilePicFullURL %>
  <%= image_tag(@user.ProfilePicFullURL) %>
  <% else %>
  <%= image_tag(@user.image) %>
  <% end %>
</p>

<p>
  <b>Location:</b>
  <% if @user.location and @user.latitude and @user.longitude %>  
  <%= link_to @user.location, "http://maps.google.com/maps?q=#{@user.latitude},#{@user.longitude}", target: "_blank"  %>
  <% elsif @user.latitude and @user.longitude %>  
  <%= link_to "Map Coordinates", "http://maps.google.com/maps?q=#{@user.latitude},#{@user.longitude}", target: "_blank"  %>
  <% else %>
  <%= @user.location %>
  <% end %>
</p>

<p>
  <b>Bio:</b>
  <%= @user.bio %>
</p>

<p>
  <b>Birthday:</b>
  <%= @user.birthday %>
</p>

<p>
  <b>Likes:</b>
  <%= @user.likes %>
</p>

<p>
  <b>Oauth token:</b>
  <%= @user.oauth_token %>
</p>

<p>
  <b>Oauth expires at:</b>
  <%= @user.oauth_expires_at %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
